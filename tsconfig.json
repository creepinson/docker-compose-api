{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "pretty": true,
    "types": [
      "jest",
      "node"
    ],
    "rootDir": "./src",
    "outDir": "build",
    "sourceMap": true,
    "target": "ES2016",
    "lib": [
      "es2019"
    ],
    "baseUrl": "./"
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": [
    "node_modules"
  ]
}